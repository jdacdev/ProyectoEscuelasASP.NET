@model Curso

@{
    ViewData["Title"] = "Información Curso";
}
<h1>@ViewData["Title"]</h1>
<div asp-validation-summary="All"></div>
<form method="POST">
    <div>
        <label asp-for="Id"></label>    
        <input asp-for="Id" disabled/>
    </div>
    <div>
        <label asp-for="Nombre"></label>    
        <input asp-for="Nombre"/>
    </div>
    <div>
        <label asp-for="Jornada"></label>
        @Html.DropDownList(
            "Jornada",                                  //Propiedad de referencia
            Html.GetEnumSelectList<TiposJornada>(),     //Enumerado que va a cargar los item
            "Seleccione una Jornada",                   //Texto por defecto
            new {@class = "form-control"}               //Estilo
        )
    </div>
    <button class="btn btn-primary"type="submit">Editar</button>
</form>